<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sentry_monolog_adapter.messenger_logging_middleware" class="SentryMonologAdapter\Messenger\Middleware\MessengerLoggingMiddleware">
            <argument key="$logger" type="service" id="monolog.logger" />
            <argument key="$loggingStrategy" type="service" id="sentry_monolog_adapter.logging_strategy" />
        </service>

        <service id="sentry_monolog_adapter.log_all_strategy" class="SentryMonologAdapter\Messenger\LoggingStrategy\LogAllStrategy" public="false" />
        <service id="sentry_monolog_adapter.log_after_count_strategy" class="SentryMonologAdapter\Messenger\LoggingStrategy\LogAfterCountStrategy" public="false" />
        <service id="sentry_monolog_adapter.log_before_count_strategy" class="SentryMonologAdapter\Messenger\LoggingStrategy\LogBeforeCountStrategy" public="false" />
        <service id="sentry_monolog_adapter.arithmetic_progression_strategy" class="SentryMonologAdapter\Messenger\LoggingStrategy\ArithmeticProgressionStrategy" public="false" />

        <service id="sentry_monolog_adapter.logging_strategy" alias="sentry_monolog_adapter.default_logging_strategy" public="false" />
    </services>
</container>