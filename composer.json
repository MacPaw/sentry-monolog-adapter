{
    "name": "macpaw/sentry-monolog-adapter",
    "description": "Sentry monolog logging bundle",
    "homepage": "https://github.com/MacPaw/sentry-monolog-adapter",
    "type": "symfony-bundle",
    "keywords": [
        "MacPaw",
        "Symfony",
        "Sentry",
        "Monolog",
        "Logging"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yozhef Hisem",
            "email": "hisemjo@gmail.com",
            "homepage": "https://macpaw.com/",
            "role": "Software Engineer"
        },
        {
            "name": "Ihor Roik",
            "email": "roidloua@gmail.com",
            "homepage": "https://macpaw.com/",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/console": "^4.4 || ^5.0 || ^6.0",
        "symfony/dotenv": "^4.4 || ^5.0 || ^6.0",
        "symfony/monolog-bundle": "<3.8",
        "sentry/sentry-symfony": "^4.0",
        "symfony/messenger": "^4.4 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "0.12.*",
        "squizlabs/php_codesniffer": "3.5.*",
        "symfony/phpunit-bridge": "^4.4 || ^5.0 || ^6.0",
        "symfony/yaml": "^4.4 || ^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "SentryMonologAdapter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SentryMonologAdapter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "vendor/bin/phpcs"
        ],
        "cs-fix": [
            "vendor/bin/phpcbf"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse"
        ],
        "phpunit": [
            "vendor/bin/simple-phpunit"
        ]
    }
}
